---
import { linksData } from './data'
import BaseLayout from '@/layouts/BaseLayout.astro'
import ListProjects from '@/components/ListProjects.vue'
---

<BaseLayout title="友链" description="友链列表">
  <h1 class="mb-10 text-title">友链</h1>
  <div mb-16 sm:mb-24>
    {
      linksData.length > 0 && (
        <div>
          {linksData.map((i) => (
            <div mb-10>
              <h2 class="select-none relative h20 pointer-events-none">
                <span class="text-3.2em color-transparent font-bold text-stroke-1.5 text-stroke-hex-aaa op35 dark:op20 absolute top-0">
                  {i.title}
                </span>
              </h2>
              <ListProjects list={i.links} />
            </div>
          ))}
        </div>
      )
    }
  </div>
</BaseLayout>
